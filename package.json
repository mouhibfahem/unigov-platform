{
    "name": "unigov-monorepo",
    "version": "1.0.0",
    "private": true,
    "workspaces": [
        "frontend",
        "backend"
    ],
    "scripts": {
        "frontend:dev": "npm run dev --workspace=frontend",
        "frontend:build": "npm run build --workspace=frontend",
        "backend:dev": "mvn -f backend/pom.xml spring-boot:run",
        "backend:build": "mvn -f backend/pom.xml clean install",
        "install:all": "npm install && mvn -f backend/pom.xml install -DskipTests"
    }
}